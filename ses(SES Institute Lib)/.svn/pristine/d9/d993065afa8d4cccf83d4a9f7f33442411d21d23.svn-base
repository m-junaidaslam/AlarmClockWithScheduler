#ifndef SES_COMMON_H_
#define SES_COMMON_H_

/* INCLUDES ******************************************************************/

#include <stdbool.h>
#include <stdlib.h>
#include <avr/io.h>
#include <avr/interrupt.h>
#include <util/delay.h>

/* DEFINES & MACROS **********************************************************/

/**pin address of port x
 *
 * In our case, Address_of_Pin_Register_Any_port = (address_of_port_register - 2)
 * example: PING == PIN_REGISTER(PORTG)
 */
//Refer to AVR Datasheet
#define PIN_REGISTER(x) (*(&(x) - 2))		// Pin_Register = ValueOf(Address_of_Port - 2)

/**address of data direction register of port x
 *
 * In our case, Address_of_Direction_Register_Any_port = (address_of_port_register - 1)
 * example: DDRG == DDR_REGISTER(PORTG)
 */
//Refer to AVR Datasheet
#define DDR_REGISTER(x) (*(&(x) - 1))		// Direction_Register = ValueOf(Adress_of_Port - 1)

enum {
	SES_SUCCESS = 0,
	SES_INVALID = 1,
	SES_FAIL = 2
};
typedef uint8_t ses_error_t;

#endif /* SES_COMMON_H_ */
